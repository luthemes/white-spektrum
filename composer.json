{
    "name": "luthemes/white-spektrum",
    "description": "White Spektrum has been converted into a responsive theme that looks great on smartphones and tablets. This theme offers several features such as custom header, left and right sidebars, featured images and more. The Mobile Menu is slightly different from other themes. The mobile menu has been created at the bottom left corner that helps users to navigation easier.",
    "keywords": [ "wordpress", "theme" ],
    "homepage": "https://luthemes.com/portfolio/white-spektrum",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Benjamin Lu",
            "email": "benlumia007@gmail.com",
            "homepage": "https://luthemes.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "WhiteSpektrum\\": "app/"
		}
    },
	"require": {
		"php": ">=7.4",
		"backdrop-dev/customize": "dev-develop",
		"backdrop-dev/fonts": "dev-develop",
		"backdrop-dev/framework": "dev-develop",
		"backdrop-dev/languages": "dev-develop",
		"backdrop-dev/mix": "dev-develop",
		"backdrop-dev/pagination": "dev-develop",
		"backdrop-dev/template-hierarchy": "dev-develop",
		"backdrop-dev/template-manager": "dev-develop",
		"backdrop-dev/theme": "dev-develop",
		"backdrop-dev/view": "dev-develop"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"wptrt/wpthemereview": "*",
		"php-parallel-lint/php-parallel-lint": "*"
	},
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs . -n",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}